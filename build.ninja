cc = gcc
cxx = g++
ld = g++
ar = ar

cflags = -g -Iinclude/ -Isrc/
cxxflags = -g -Iinclude/ -Isrc/ -std=c++17 -fconcepts

rule cc
    depfile = $out.d
    command = $cc -MMD -MF $out.d -o $out -c $cflags $in

rule cxx
    depfile = $out.d
    command = $cxx -MMD -MF $out.d -o $out -c $cxxflags $in

rule ar
    command = $ar rcs $out $in
    
rule link
    command = $ld -o $out $in -lstdc++fs

rule install
    command = rm -rf $out && cp -r $in $out
    
subninja chest.ninja
